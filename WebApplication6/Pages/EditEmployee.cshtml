@page
@model WebApplication6.Pages.EditEmployeeModel
@{
}
<br />
<h1>Edit Employee</h1>
@if(Model.errorMsg.Length>0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>
            @Model.errorMsg
        </strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
<form method="post">
    <input type="hidden" name="id" value="@Model.emp.id">

    <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label">NAME</label>
      <div class="col-sm-6"> 
          <input type="text" class="form-control" name="name" value="@Model.emp.name">
    </div>
    </div>
    <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label">DOB</label>
      <div class="col-sm-6"> 
          <input type="datetime" class="form-control" name="dob" value="@Model.emp.dob">
    </div>
    </div>
    <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label">BASEOFFICE</label>
      <div class="col-sm-6"> 
          <input type="text" class="form-control" name="baseoff" value="@Model.emp.baseoff">
    </div>
    </div>
    <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label">PHONE</label>
      <div class="col-sm-6"> 
          <input type="text" class="form-control" name="phone" value="@Model.emp.phone">
    </div>
    </div>
    <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label">DESIGNATION</label>
      <div class="col-sm-6"> 
          <input type="text" class="form-control" name="des" value="@Model.emp.des">
    </div>
    </div>
    <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label">DOJ</label>
      <div class="col-sm-6"> 
          <input type="datetime" class="form-control" name="doj" value="@Model.emp.dateofjoining">
    </div>
    </div>
    @if(Model.successMsg.Length>0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>
            @Model.successMsg
        </strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

    <div class="row mb-3"> 
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        </div>
</form>